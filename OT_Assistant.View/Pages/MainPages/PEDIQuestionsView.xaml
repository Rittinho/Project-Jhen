<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:OT_Assistant.ViewModel.Questions;assembly=OT_Assistant.ViewModel"
             x:Class="OT_Assistant.View.Pages.MainPages.PEDIQuestionsView"
             Title="PEDIQuestionsView">
    <ContentPage.BindingContext>
        <viewModels:MainViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Label Text="{Binding CurrentQuestion.QuestionText}"
             FontSize="24"
             FontAttributes="Bold"
             HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding CurrentQuestion.Answers}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding AnswerText}"
                          Command="{Binding OnClickCommand}"
                          BackgroundColor="{Binding ButtonColor}"
                          IsEnabled="{Binding IsButtonEnabled}"
                          FontSize="18"
                          Padding="10"
                          Margin="5" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="PrÃ³xima Pergunta"
              Command="{Binding NextQuestionCommand}"
              HorizontalOptions="Center"
              Margin="0,30,0,0"/>

    </VerticalStackLayout>
</ContentPage>